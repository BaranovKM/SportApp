<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.konstantin.sportapp.MainActivity">

    <Button
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:text="Силовые"
        android:id="@+id/buttonTrain"
        android:onClick="onClick"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:text="Кардио"
        android:onClick="onClick"
        android:id="@+id/buttonCardio"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/buttonTrain"
        android:layout_toEndOf="@+id/buttonTrain" />
    <Button
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:text="Диета"
        android:onClick="onClick"
        android:id="@+id/buttonDiet"
        android:layout_below="@+id/buttonTrain"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:text="Фармакология"
        android:onClick="onClick"
        android:id="@+id/buttonPharm"
        android:layout_alignTop="@+id/buttonDiet"
        android:layout_toRightOf="@+id/buttonDiet"
        android:layout_toEndOf="@+id/buttonDiet" />
    <Button
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:text="Фотки"
        android:onClick="onClick"
        android:id="@+id/buttonPhoto"
        android:layout_below="@+id/buttonDiet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:text="Музыка"
        android:onClick="onClick"
        android:id="@+id/buttonMusic"
        android:layout_below="@+id/buttonPharm"
        android:layout_toRightOf="@+id/buttonDiet"
        android:layout_toEndOf="@+id/buttonDiet" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Настройки"
        android:onClick="onClick"
        android:id="@+id/buttonSettings"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
